<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Extension to SlimMessageBus that provides Avro serialization based on the AvroConvert library</Description>
    <Product>SlimMessageBus</Product>
    <Copyright>Copyright Â© 2020</Copyright>
    <PackageProjectUrl>https://github.com/zarusz/SlimMessageBus</PackageProjectUrl>
    <RepositoryUrl>https://github.com/zarusz/SlimMessageBus</RepositoryUrl>
    <PackageTags>SlimMessageBus Avro Apache Serialization messaging AvroConvert</PackageTags>
    <PackageReleaseNotes>See https://github.com/zarusz/SlimMessageBus/releases</PackageReleaseNotes>
    <Version>1.0.0-beta4</Version>
    <Authors>zarusz</Authors>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AvroConvert" Version="2.2.0" />
    <PackageReference Include="Common.Logging" Version="3.4.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SlimMessageBus.Host.Serialization\SlimMessageBus.Host.Serialization.csproj" />
  </ItemGroup>

</Project>
